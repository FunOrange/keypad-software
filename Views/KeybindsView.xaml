<UserControl x:Class="KeypadSoftware.Views.KeybindsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KeypadSoftware.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Row 0 -->
        <TextBlock Grid.Row="0" Foreground="White" FontSize="26" Margin="20, 20">Keybinds</TextBlock>

        <!-- Row 1 -->
        <Grid Grid.Row="1" HorizontalAlignment="Left" Width="auto" Margin="20, 0, 0, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto" MinWidth="36"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <!-- Left Button -->
            <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontSize="16" >Left Button</TextBlock>
            <TextBlock x:Name="LeftKeybind" Text="Z"
                       Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="12,0"
                       Foreground="White" FontSize="18" FontWeight="Bold"/>
            <Button x:Name="EditLeftKeybind" Grid.Row="0" Grid.Column="2" Width="44" Height="25" Margin="10, 0">Edit</Button>

            <!-- Right Button -->
            <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontSize="16" >Right Button</TextBlock>
            <TextBlock x:Name="RightKeybind" Text="X"
                       Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="12,0"
                       Foreground="White" FontSize="18" FontWeight="Bold"/>
            <Button x:Name="EditRightKeybind" Grid.Row="1" Grid.Column="2" Width="44" Height="25" Margin="10, 0">Edit</Button>

            <!-- Side Button -->
            <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontSize="16" >Side Button</TextBlock>
            <TextBlock x:Name="SideKeybind" Text="C"
                       Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="12,0"
                       Foreground="White" FontSize="18" FontWeight="Bold"/>
            <Button x:Name="EditSideKeybind" Grid.Row="2" Grid.Column="2" Width="44" Height="25" Margin="10, 0">Edit</Button>

        </Grid>
    </Grid>
</UserControl>
