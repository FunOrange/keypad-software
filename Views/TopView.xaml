<Window x:Class="KeypadSoftware.Views.TopView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeypadSoftware.Views"
        xmlns:cal="http://www.caliburnproject.org"
        mc:Ignorable="d"
        Title="TopView" Height="500" Width="900"
        WindowStyle="None"
        ResizeMode="NoResize"
        cal:Message.Attach="[Event Loaded] = [Action Window_Loaded($eventArgs)]">
    <Grid Background="#181735">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Row 0 -->
        <Grid Background="#0F0F2D"
              Grid.Row="0"
              Grid.ColumnSpan="2"
              MouseDown="Grid_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="FunOrange Keypad Software" Foreground="White" Grid.Column="0" Grid.ColumnSpan="2" Margin="14, 0, 0, 0" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
            <Button x:Name="KeybindsTabButton" Foreground="White" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center">Keybinds</Button>
            <Button x:Name="LightingTabButton" Foreground="White" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center">Lighting</Button>
            <Button x:Name="CountersTabButton" Foreground="White" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center">Counters</Button>
            <Button x:Name="DebounceTabButton" Foreground="White" Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center">Debounce</Button>
            <Grid Grid.Column="8" Grid.ColumnSpan="2" Width="92" HorizontalAlignment="Right">
                <Button Width="46" HorizontalAlignment="Left" BorderThickness="0"
                        x:Name="MinimizeButton" Click="MinimizeButton_Click"></Button>
                <Button Width="46" HorizontalAlignment="Right" BorderThickness="0"
                        x:Name="CloseButton" Click="CloseButton_Click"></Button>
            </Grid>
        </Grid>
        
        <!-- Row 1 -->
        <ContentControl Grid.Row="1" Grid.Column="0" x:Name="ActiveItem"
                        Visibility="Hidden"/>

        <Grid Grid.Row="1" Background="Black">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1">
                <TextBlock x:Name="ConnectionStatus" Foreground="White" TextAlignment="Center" FontSize="20" Margin="0,0,0,13">Keypad disconnected</TextBlock>
                <TextBlock Foreground="White" FontFamily="Consolas" TextAlignment="Center" Margin="0,0,0,6">Serial Ports</TextBlock>
                <ItemsControl x:Name="PortListHighPriority">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Foreground="White" FontFamily="Consolas"
                                           Grid.Column="0" TextAlignment="Left"
                                           Text="{Binding Item1}"/>
                                <TextBlock Foreground="White" FontFamily="Consolas"
                                           Grid.Column="1" TextAlignment="Center"
                                           Text="{Binding Item2}"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <ItemsControl x:Name="PortListLowPriority">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Foreground="Gray" FontFamily="Consolas"
                                           Grid.Column="0" TextAlignment="Left"
                                           Text="{Binding Item1}"/>
                                <TextBlock Foreground="Gray" FontFamily="Consolas"
                                           Grid.Column="1" TextAlignment="Center"
                                           Text="{Binding Item2}"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
        
        
        
    </Grid>
</Window>
